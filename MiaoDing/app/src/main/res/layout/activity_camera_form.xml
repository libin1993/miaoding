<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_gray_ed"
              android:fitsSystemWindows="true"
              >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/widget_header_layout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="基本信息"
                android:textColor="@color/dark_gray_22"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:text="为了确保衣服合身，请准确输入您的净身高、净体重"
                android:textColor="@color/red_b1"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="姓    名："
                android:textColor="@color/dark_gray_22"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_measure_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入您的真实姓名"
                android:textColor="@color/dark_gray_22"
                android:textColorHint="@color/light_gray_97"
                android:textSize="14sp"
                android:singleLine="true"
                android:maxLength="10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="手机号："
                android:textColor="@color/dark_gray_22"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_measure_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入您的手机号"
                android:textColor="@color/dark_gray_22"
                android:textColorHint="@color/light_gray_97"
                android:textSize="14sp"
                android:singleLine="true"
                android:maxLength="11"
                android:inputType="phone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="身    高："
                android:textColor="@color/dark_gray_22"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_measure_height"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入您的净身高"
                android:textColor="@color/dark_gray_22"
                android:textColorHint="@color/light_gray_97"
                android:textSize="14sp"
                android:singleLine="true"
                android:maxLength="6"
                android:digits=".0123456789"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:text="cm"
                android:textColor="@color/dark_gray_22"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="体    重："
                android:textColor="@color/dark_gray_22"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_measure_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入您的净体重"
                android:textColor="@color/dark_gray_22"
                android:textColorHint="@color/light_gray_97"
                android:textSize="14sp"
                android:singleLine="true"
                android:maxLength="6"
                android:digits=".0123456789"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:text="kg"
                android:textColor="@color/dark_gray_22"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="选填信息"
                android:textColor="@color/dark_gray_22"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/cb_measure_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableRight="@drawable/cb_select_embroidery"
                android:paddingRight="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_measure_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="店铺号："
                    android:textColor="@color/dark_gray_22"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_measure_store"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="@color/dark_gray_22"
                    android:textColorHint="@color/light_gray_97"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:maxLength="20"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="胸    围："
                    android:textColor="@color/dark_gray_22"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_measure_bust"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/dark_gray_22"
                    android:textColorHint="@color/light_gray_97"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:maxLength="6"
                    android:digits=".0123456789"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:text="cm"
                    android:textColor="@color/dark_gray_22"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="腰    围："
                    android:textColor="@color/dark_gray_22"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_measure_waist"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/dark_gray_22"
                    android:textColorHint="@color/light_gray_97"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:maxLength="6"
                    android:digits=".0123456789"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:text="cm"
                    android:textColor="@color/dark_gray_22"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="臀    围："
                    android:textColor="@color/dark_gray_22"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_measure_hip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/dark_gray_22"
                    android:textColorHint="@color/light_gray_97"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:maxLength="6"
                    android:digits=".0123456789"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:text="cm"
                    android:textColor="@color/dark_gray_22"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_confirm_camera"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="立即拍照"
        android:textColor="@android:color/white"
        android:background="@color/dark_gray_15"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="16sp"/>
    
</RelativeLayout>